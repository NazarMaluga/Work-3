#include <stdio.h>

int main() {
    double t1, t2, t3;
    
    // Виводимо запит на введення трьох значень
    printf("Введіть три значення:\n");
    
    // Зчитуємо значення t1, t2, t3 з вхідного потоку
    scanf("%lf %lf %lf", &t1, &t2, &t3);
    
    // Обчислюємо загальну швидкість з'їдання пирога
    double total_speed = (1.0 / t1) + (1.0 / t2) + (1.0 / t3);
    
    // Обчислюємо час, необхідний для з'їдання пирога разом
    double time_to_eat_pie = 1.0 / total_speed;
    
    // Виводимо результат, округлений до 2 знаків після коми, з додаванням "годин"
    printf("Час, необхідний для з'їдання пирога: %.2lf годин\n", time_to_eat_pie);
    
    return 0;
}
